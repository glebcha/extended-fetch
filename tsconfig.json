{
 "compilerOptions": {
   "baseUrl":".",
   "target":"ES2017",
   "allowJs": true,
   "sourceMap": true,
   "strict": true,
   "incremental": true,
   "downlevelIteration": true,
   "noUnusedParameters": true,
   "noUnusedLocals": true,
   "noImplicitReturns": true,
   "esModuleInterop": true,
   "resolveJsonModule": true,
   "moduleResolution":"node",
   "allowSyntheticDefaultImports": true,
   "outDir":"./build",
   "lib": [
     "DOM",
     "DOM.Iterable",
     "ES2017",
     "ES2018",
     "ESNext"
    ],
  },
 "include": ["src"],
 "exclude": ["node_modules/*","build/*" ],
}
